<h1>新しいカートアイテムを追加</h1>

<%= form_with model: @cart_item, url: cart_items_path, local: true do |form| %>
  <div class="field">
    <%= form.label :product_id %>
    <%= form.collection_select :product_id, @products, :id, :name, prompt: "選択してください" %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="actions">
    <%= form.submit 'カートに追加' %>
  </div>
<% end %>

<%= link_to 'カートを表示', carts_show_path %>
