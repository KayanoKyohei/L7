<h1>ショッピングカート</h1>

<% if @cart_items.any? %>
  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>価格</th>
        <th>数量</th>
        <th>合計金額</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.product.name %></td>
          <td><%= cart_item.product.price %></td>
          <td><%= cart_item.quantity %></td>
          <td><%= cart_item.total_price %></td>
          <td><%= link_to '削除', cart_item, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>合計金額: <%= @cart.total_price %></p>
  <%= link_to 'チェックアウト', checkout_path %>
<% else %>
  <p>カートに商品がありません。</p>
<% end %>

<%= link_to '商品一覧に戻る', products_path %>
